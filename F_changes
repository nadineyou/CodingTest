class Person(object):

    def __init__(self, initial_age):
        """
           Method description
        """
        # Nice validation
        if isinstance(initial_age, int):
            self.age = initial_age

            # Missing the validation of age > 0
            if self.age < 0:
                raise ValueError("Age must be equal to or greater than 0")

        else:
            raise ValueError("Age must be an integer equal to or greater"\
                             " than 0")


    def what_am_i(self):
        """
           Method description
        """

        # self.initial_age doesn't exists
        # age=self.initial_age
        age = self.age

        # You can avoid the first age >=0 if you validate the age
        # at the beginning
        if age>=0 and age < 13:
            print("You are young...")
        elif age>=13 and age<18:
            print("You are a teenager...")
        elif age>=18:
            # At this point you can just use else
            print("You are an adult...")


    def year_passes(self):
        """
           Method description
        """

        # age=self.initial_age
        # self.initial_age doesn't exists

        # If you create a copy of a class variable, then change the value
        #  of the copy then the value of the class variable will be the same
        #  (except in lists)

        # age+=1
        # return age

        # We can change the class variable directly
        self.age += 1
        return self.age
